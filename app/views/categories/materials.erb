<div class="active-user">
  <div class="logout">
    <p><a href="/logout">log out</a></p>
  </div>
  <p><%=@current_user.username%></p>
</div>

<div id="db-icon">
  <a href="/"><img src="../../images/db-icon.svg"></a>
</div>

<div class="container">
	<div class="recent-header">
	  <div class="header-title">
			<p><a href="/materials">Materials</a> / Category / <%= @category.name %> </p>
		</div>
	  <div class="recent-divider"></div>
	</div>

	<div class="container-wrapper">
		<% @category.materials.each do |material| %>
	  	<div class="col-sm-6 col-md-4 col-lg-3">
	      <a href="/materials/<%= material.slug %>">

	      	<div class="item-wrapper">
	          <div class="recent-item-sq">
	    				<img src="<%= material.file_url(:thumb) %>">
	    			</div>
	    			
	    			<div class="recent-item-name">
	            <p><%= material.name %></p>
	          </div>
	        </div>
	  		</a>
	    </div>
		<%end%>
	</div>
</div>

<div class="bottom-spacer"></div>