<div class="active-user">
  <div class="logout">
    <p><a href="/logout">log out</a></p>
  </div>
  <p><%=@current_user.username%></p>
</div>

<div id="db-icon">
  <a href="/"><img src="../../images/db-icon.svg"></a>
</div>

<div class="container">
	<div class="recent-header">
	  <div class="header-title">
			<p><a href="/artworks">Artworks</a> / Category / <%= @category.name %> </p>
		</div>
	  <div class="recent-divider"></div>
	</div>

	<form class="delete-button" action="/categories/<%= @category.slug %>/delete" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <i style="margin-left: 5px;" class="material-icons">&#xe15d;</i>
        <input style="border:none" class="delete-submit" type="submit" value="Delete Category">
      </form>

	<div class="container-wrapper">
		<% @category.artworks.each do |artwork| %>
			<div class="col-sm-6 col-md-4 col-lg-3">
	      <a href="/artworks/<%= artwork.slug %>">

	      	<div class="item-wrapper">
	          <div class="recent-item-sq">
	    				<img src="<%= artwork.file_url(:thumb) %>">
	    			</div>

	    			<div class="recent-item-name">
	            <p><%= artwork.title %></p>
	          </div>
	        </div>
	      </a>
	    </div>
		<%end%>
	</div>
</div>
